<% prev_speaker_id = 0 %>
<% transcript.timed_texts.each do |tt| %>
<% if prev_speaker_id != tt.speaker_id %>
<%= if params["timestamps"] == "true" 
	"\n\r" +  format_time(tt.start_time)
else 
	"\n\r"
end %>
<%= transcript.speaker_name(tt.speaker_id) + "\n" %>
<% end %>
<%= tt.text + " " %>
<% prev_speaker_id = tt.speaker_id %>
<% end %>
